<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.docplus.doc_schedule">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="   Pick Date"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:drawableLeft="@drawable/ic_menu_calender"
            android:editable="false"
            android:focusable="false"
            android:id="@+id/doc_schedule_date"
            />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:elevation="10dp"
            android:onClick="checkDate"
            android:layout_toRightOf="@+id/doc_schedule_date"
            android:src= "@drawable/ic_search"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/doc_schedule_recyclerview">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>
