<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_patient_edit_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.dell.docplus.Patient_profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:layout_marginTop="10dp"
                android:focusable="false"
                android:editable="false"
                android:layout_below="@+id/profile_pat_profile_pic"
                android:textSize="18dp"
                android:id="@+id/profile_pat_name"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile"
                android:focusable="false"
                android:editable="false"
                android:inputType="number"
                android:layout_below="@id/profile_pat_name"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:id="@+id/profile_pat_mob"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile"
                android:inputType="number"
                android:layout_below="@id/profile_pat_name"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:id="@+id/profile_pat_mobEdit"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:focusable="false"
                android:editable="false"
                android:inputType="textEmailAddress"
                android:layout_below="@+id/profile_pat_mob"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:id="@+id/profile_pat_email"/>

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:focusable="false"
                android:editable="false"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/profile_pat_email"
                android:id="@+id/profile_pat_agetext"/>

            <EditText
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/profile_pat_gender"
                android:focusable="false"
                android:editable="false"
                android:hint="Gender"
                android:layout_below="@id/profile_pat_email"
                android:layout_toRightOf="@id/profile_pat_agetext"
                android:orientation="horizontal"
                android:layout_marginLeft="40dp"
                android:textSize="20dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:editable="false"
                android:focusable="false"
                android:layout_below="@id/profile_pat_agetext"
                android:id="@+id/profile_pat_add"
                android:textSize="18dp"
                android:inputType="textMultiLine"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:layout_below="@id/profile_pat_agetext"
                android:id="@+id/profile_pat_addEdit"
                android:textSize="18dp"
                android:inputType="textMultiLine"
                />
            <EditText
                android:layout_width="match_parent"
                android:enabled="false"
                android:layout_height="wrap_content"
                android:hint="City"
                android:editable="false"
                android:focusable="false"
                android:layout_below="@id/profile_pat_addEdit"
                android:id="@+id/profile_pat_city"
                android:textSize="18dp"
                android:inputType="number"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:layout_below="@id/profile_pat_addEdit"
                android:id="@+id/profile_pat_cityEdit"
                android:textSize="18dp"
                android:inputType="number"
                />

            <EditText
                android:layout_width="match_parent"
                android:enabled="false"
                android:layout_height="wrap_content"
                android:hint="History"

                android:editable="false"
                android:focusable="false"
                android:layout_below="@id/profile_pat_cityEdit"
                android:id="@+id/profile_pat_history"
                android:textSize="18dp"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="History"
                android:layout_below="@id/profile_pat_cityEdit"
                android:id="@+id/profile_pat_historyEdit"
                android:textSize="18dp"
                android:inputType="number"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:onClick="saveUser"
                android:layout_below="@+id/profile_pat_history"
                android:id="@+id/profile_pat_btnEdit"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:onClick="editUser"
                android:layout_below="@+id/profile_pat_history"
                android:id="@+id/profile_pat_btn"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/profile_pat_profile_pic"
                android:src="@drawable/prof"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
